<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.subhadiproy.androidnavigationview">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_img1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


        <activity android:name=".Profile"
            android:theme="@style/AppTheme"
            android:label="Profile"></activity>
        <activity android:name=".news"
            android:theme="@style/AppTheme"
            android:label="Health News Updates"></activity>

        <activity android:name=".MainActivity_covid19"
            android:theme="@style/AppTheme"
            android:label="Covid-19 Live Tracker"/>
        <activity android:name=".AffectedCountries"
            android:theme="@style/AppTheme"
            android:label="Affected Countries"/>
        <activity android:name=".DetailActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".DetailedStateActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".AffectedStates"
            android:theme="@style/AppTheme"
            android:label="Affected States"/>
    </application>

</manifest>